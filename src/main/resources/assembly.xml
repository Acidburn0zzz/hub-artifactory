<assembly>
	<includeBaseDirectory>false</includeBaseDirectory>
	<formats>
		<format>zip</format>
	</formats>
	<id>${project.version}</id>
	<fileSets>
		<fileSet>
			<directory>${project.basedir}/src/main/resources</directory>
			<outputDirectory>properties</outputDirectory>
			<includes>
				<include>*</include>
			</includes>
			<excludes>
				<exclude>*assembly*</exclude>
			</excludes>
		</fileSet>
		<fileSet>
			<directory>${project.basedir}/src/main/java/com/blackducksoftware/integration/artifactory</directory>
			<outputDirectory></outputDirectory>
			<includes>
				<include>blackDuckScanForHub.groovy</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>${project.basedir}/target/libs/compile</directory>
			<outputDirectory>lib</outputDirectory>
			<includes>
				<include>*.jar</include>
			</includes>
		</fileSet>
	</fileSets>
</assembly>
